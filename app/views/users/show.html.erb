<div class="row">
  <div class="col-md-6">
    <div class="media">
      <br />

      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">

          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>

  <div class="col-md-4">

      <h3>Favorited Posts</h3>
      <% @user.favorites.each do |fave| %>
      <% avatar_url = fave.post.user.avatar_url(48) %>
        <% if avatar_url %>
          <div class="media-left">

            <%= image_tag avatar_url, class: 'media-object' %>
          </div>
        <% end %>

        <%= render partial: 'posts/post', locals: { post: fave.post } %>

      <% end %>

    </div>
</div>

<% if user_has_any_posts_comments?(@user) %>
  <h2>Posts</h2>
  <%= render @user.posts %>
  <h2>Comments</h2>
  <%= render @user.comments %>
<% else %>
  <h4><%= "#{@user.name} has not submitted any posts yet." %></h4>
<% end %>

<% if user_has_any_favorites?(@user) %>
  <% @favorites.each { |post| post.title } %>
<% end %>
